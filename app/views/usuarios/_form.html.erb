

<%= simple_form_for @usuario, html: {multipart: true, :remote => true, authenticity_token: true } do |f| %>


<% if @usuario.errors.any? %>
<div id="error_explanation" >
  <h2>Por Favor Verificar:</h2>

  <ul class="list-group alert alert-danger">
    <% @usuario.errors.full_messages.each do |message| %>
    <li class="list-group-item ">
      <%= message %></li>
    <% end %></ul>
</div>
<% end %>

<div class="container">

  <div class="page-header">
    <h1>Crea una nueva usuario.</h1>
  </div>

  <div class="well clearfix">
    <div class="row">
      <div class="col-md-12">
        <label class="control-label" for="firstname">Nombre</label>
        <%= f.text_field :nombre, :label =>
        false, class: "form-control", placeholder: 'Campo Obligatorio' %>
      </div>
    </div>

    <br/>
    <div class="row">
      <div class="col-md-12">
        <label class="control-label">Email</label>
        <%= f.text_field :email, :label =>
        false, class: "form-control", placeholder: 'Campo Obligatorio' %>
      </div>
    </div>
    <br/>


    <div class="modal-footer">
      <%= f.submit "Guardar", :class =>
      'btn btn-info color_blanco custom' %>
      <a href="#" class="btn btn-default" onclick="$.lazybox.close()">Cerrar</a>
    </div>

  </div>
</div>

<% end %>
