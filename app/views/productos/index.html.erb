<p id="notice"><%= notice %></p>

<h1>Listing productos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Due date</th>
      <th>Completed</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @productos.each do |producto| %>
      <tr>
        <td><%= producto.nombre %></td>
        <td><%= producto.precio %></td>
        <td><%= producto.descripcion %></td>
        <td><%= producto.user_id %></td>
        <td><%= link_to 'Show', user_producto_path(@user,producto) %></td>
        <td><%= link_to 'Edit', edit_user_producto_path(@user,producto) %></td>
        <td><%= link_to 'Destroy', user_producto_path(@user,producto), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New producto', new_user_producto_path %>
