



<div class="container">
  <div class="row">

    <div class="col-md-12">
      <h1>Noticias</h1>
      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">

              <%= form_tag request.path, :method =>
              'get', :class => '' do %>
              <div>
                <div class="row">

                  <div class="col-lg-12 ">

                    <div class="input-group custom-search-form">
                      <%= text_field_tag :search, params[:search], :placeholder =>
                      "Busca por el Nombre", :class => 'form-control' %>
                      <span class="input-group-btn">

                        <%= button_tag(type: "submit", class: "btn principal") do %> <i class="fa fa-search"></i>
                        <% end %></span>
                    </div>
                    <!-- /input-group --> </div>

                </div>
              </div>
              <% end %></div>
            <div class="col col-xs-6 text-right">
              <%= link_to 'Nueva Noticia', new_noticia_path, remote: true, :class =>"btn btn-sm btn-primary btn-create" %></div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>

              <tr>
                <th style="width: 5%" class="hidden-xs">ID</th>
                <th style="width: 20%">Titulo</th>
                <th style="width: 50%">Descripcion</th>
                <th style="width: 15%">Estado Noticia</th>
                <th  style="width: 10%; text-align: center;"> <em class="fa fa-cog"></em>
                </th>

              </tr>
            </thead>
            <tbody>

              <%= render @noticias %></tbody>
          </table>

        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col col-xs-12" style="text-align: center;">
              <%= will_paginate @noticias, renderer: BootstrapPagination::Rails, :previous_label =>'Atras', :next_label => 'Siguiente' %></div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>