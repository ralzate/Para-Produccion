<script>CKEDITOR.replace('noticia[descripcion]');</script>

<%= form_for(@noticia, html: { multipart: true, :remote =>
true, authenticity_token: true   }) do |f| %>
<% if @noticia.errors.any? %>
<div id="error_explanation" >
  <h2>Por Favor Verificar:</h2>

  <ul class="list-group alert alert-danger">
    <% @noticia.errors.full_messages.each do |message| %>
    <li class="list-group-item ">
      <%= message %></li>
    <% end %></ul>
</div>
<% end %>

<div class="container">

  <div class="page-header">
    <h1>Crea una nueva noticia.</h1>
  </div>

  <div class="well clearfix">
    <div class="row">
      <div class="col-md-12">
        <label class="control-label" for="firstname">Titulo</label>
        <%= f.text_field :titulo, :label =>
        false, class: "form-control", placeholder: 'Campo Obligatorio' %>
      </div>
    </div>

    <br/>
    <div class="row">
      <div class="col-md-12">
        <label class="control-label">Descripci√≥n</label>
        <%= f.cktext_area :descripcion, :label =>
        false, class: "form-control", placeholder: 'Campo Obligatorio' %>
      </div>
    </div>
    <br/>

    <div class="row">

      <div class="col-md-3">

        <div class="fileinput fileinput-new" data-provides="fileinput">
          <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
            <img src="data:image/svg+xml;base64," alt="..."></div>
          <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
          <div>
            <span class="btn btn-default btn-file">
              <span class="fileinput-new">Seleccionar una Imagen</span>
              <span class="fileinput-exists">Cambiar Imagen</span>
              <%= f.file_field :imagen %></span>
            <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Eliminar</a>
          </div>
        </div>

      </div>

      <div class="col-md-1">Estado:</div>
      <div class="col-md-2">

        <%= f.label :estado_noticia, 'Publicada' %></div>
      <div class="col-md-2" style="margin-top: -10px;">

        <%= f.radio_button(:estado_noticia, "Publicada", :id =>
        "Publicada", :title => "Es un Campo Obligatorio", :class => "form-control checbkbox_noticia" )%>
      </div>
      <div class="col-md-2">

        <%= f.label :estado_noticia, 'No Publicada' %></div>

      <div class="col-md-2" style="margin-top: -10px;">

        <%= f.radio_button(:estado_noticia, "No Publicada", :id =>
        "No Publicada", :title => "Es un Campo Obligatorio", :class => "form-control checbkbox_noticia" )%>
      </div>

    </div>

    <div class="modal-footer">
      <%= f.submit "Guardar", :class =>
      'btn btn-info color_blanco custom' %>
      <a href="#" class="btn btn-default" onclick="$.lazybox.close()">Cerrar</a>
    </div>

  </div>
</div>

<% end %>
