<div>

  <div class="panel">

    <div class="panel-heading">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true" onclick="$.lazybox.close()">&times;</button>
      Información Noticia
    </div>

    <div class="panel-body">
      <div class="col-md-12"> <strong>Nombre:</strong>
        <%= @noticia.titulo %></div>
      <!-- .col-md-3 -->

      <div class="col-md-12"> <strong>Descripción:</strong>
        <%= @noticia.descripcion %></div>
      <!-- .col-md-3 -->

      <div class="col-md-12">
        <strong>Estado:</strong>
        <%= @noticia.estado_noticia %></div>
      <!-- .col-md-3 --> </div>
    <!-- .panel-body -->

    <%= image_tag @noticia.imagen.url, :size =>
    "200x200" %>
    <div class="panel-footer">
      <a href="#" class="btn btn-info color_blanco custom" onclick="$.lazybox.close()">Cerrar</a>

    </div>

  </div>
  <!-- .panel -->

</div>
